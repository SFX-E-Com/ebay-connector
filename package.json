{
  "name": "ebay_connector_nextjs",
  "version": "1.0.0",
  "description": "eBay Connector - Next.js Version",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "build": "next build",
    "dev": "next dev --turbopack",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx",
    "prebuild:check": "npm run lint && npx tsc --noEmit",
    "build:check": "npm run prebuild:check && npm run build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:integration": "firebase emulators:exec --only firestore 'vitest run --config vitest.integration.config.ts'",
    "test:messaging": "tsx scripts/test-messaging.ts",
    "emulator": "firebase emulators:start --only firestore",
    "emulator:ui": "firebase emulators:start --only firestore --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "ebay-api": "^9.2.1",
    "ebay-oauth-nodejs-client": "^1.2.2",
    "fast-xml-parser": "^5.3.0",
    "firebase-admin": "^13.6.0",
    "framer-motion": "^12.23.13",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.545.0",
    "next": "^16.0.10",
    "next-themes": "^0.4.6",
    "pg": "^8.16.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-icons": "^5.5.0",
    "typescript": "5.7.3",
    "xmlbuilder2": "^4.0.0",
    "zod": "^3.25.17"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@next/eslint-plugin-next": "^16.1.1",
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.14.0",
    "@types/pg": "^8.15.5",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "bootstrap": "^5.3.3",
    "eslint-config-next": "^16.1.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "firebase-tools": "^15.1.0",
    "jsdom": "^27.4.0",
    "react-bootstrap": "^2.10.10",
    "sass": "^1.97.1",
    "tsx": "^4.19.2",
    "typescript-eslint": "^8.51.0",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16",
    "husky": "^9.1.7"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bcrypt",
      "sharp"
    ]
  }
}
